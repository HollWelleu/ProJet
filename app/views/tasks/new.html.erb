<%= form_for([@project, @task]) do |f| %>

    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, id: :task_name %>
    </div>

    <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, id: :task_description %>
    </div>

    <div class="field">
        <%= f.label :done %>
        <%= f.check_box :done, id: :task_done %>
    </div>

    <div class="actions">
        <%= f.submit %>
    </div>

<% end %>